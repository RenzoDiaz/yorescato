    { lat: '-6.4852423', lng: '-79.7736306,17z'},
    { lat: '-5.1570234', lng: '-79.3127543,17z'}
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
});
</script>
