<body>
<div id="fullpage">
<% if @navbar %>
	<header>
		<div class="container">
			<h1><a href="/"><%= image_tag 'logoyorescato.png' %></a></h1>
			<nav class="menu-top">
				<ul>
					<li>
						<form action="">
							<input type="text" class="search-field" placeholder="Buscar">
						</form>
					</li>
					<li>
						<a href="" class="">Ingresar</a>
					</li>
					<li>
						<a href="" class="donate-button">Donate</a>
					</li>
				</ul>
			</nav>
		</div>
	</header>
<% end %>
 	<%= yield %>
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 column-4">
					<h3>Suscribete</h3>
					<% @country = Geocoder::search(@client_ip).first.country %>
					<%= form_for Lead.new, :remote => true do |f| %>
						<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
						<div class="outline-submit">
						<%= f.email_field :email, placeholder:'Email' %>
						<%= f.hidden_field :device, :value => request.env['mobvious.device_type'] %>
						<%= f.hidden_field :country, :value => @country %>
						<%= f.button 'OK', {class: 'button-submit'} %>	
						<p id="response"></p>		
						</div>
					<% end %>					
				</div>
				<div class="col-lg-4 col-md-4 col-sm-4 column-4">
					<h3>Siguenos en:</h3>
					<div class="socials-icon">
						<a href="https://www.facebook.com/yorescato" class="circle icon facebook-ico" target="_blank"></a>
						<a href="https://twitter.com/YoRescato" class="circle icon twitter-ico" target="_blank"></a>
						<a href="https://google.com/+Yorescatoa" class="circle icon google-ico" target="_blank"></a>
						<a href="https://www.youtube.com/channel/UC2dnaT5-hVlGCAjs3x5NL4g" class="circle icon youtube-ico" target="_blank"></a>
					</div>
				</div>
				<div class="col-lg-4 col-md-4 col-sm-4 column-4">
					<h3>Contactanos</h3>
					<div class="contact-button">
						<a href="" class="icon contact-ico">Envianos un E-mail</a>
					</div>
				</div>
			</div>
			<p>&copy; yorescato</p>			
		</div>
	</footer>
</div>
<script>
	
	function setDimensions(){
		var windowsHeight = $(window).height();
		$('.landing').css('height', windowsHeight + 'px');
	}

	setDimensions();

	//when resizing the site, we adjust the heights of the image
	$(window).resize(function() {
		setDimensions();
	});

</script>
