];

var handler = Gmaps.build('Google');
handler.buildMap({ 
    internal: {id: 'multi_markers'}, 
    provider: {
      zoom:      5,
      styles:    mapStyle
    }}, function(){
  var markers = handler.addMarkers([
    { lat: '-10.9965942', lng: '-76.3289941,17z'},
    { lat: '-17.1470818', lng: '-71.8615801,17z'},
    { lat: '-13.5773495', lng: '-72.886993,17z'},
